<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent background -->
            <corners android:radius="16dp"/>
            <padding
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                android:bottom="0dp"/>
            <size android:width="0dp" android:height="0dp"/>
            <gradient
                android:startColor="#6fdfb3" 
                android:endColor="#3b8976"
                android:angle="270"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Box Layer -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="0.5dp"
                android:color="#6fdfb3"/>
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F8F8"
    android:padding="16dp">

    <!-- Vector Image -->
    <ImageView
        android:id="@+id/vectorImage"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/vector_object" />

    <!-- Container for White Box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vectorImage"
        android:layout_marginTop="20dp" 
        android:orientation="vertical"
        android:background="@drawable/white_box_background"
        android:padding="16dp"
        android:elevation="8dp"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MegaPayer"
            android:textColor="#000000"
            android:textSize="32sp"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold" />

        <!-- By connecting text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By connecting your wallet, you agree to our terms of Service and our Privacy Policy."
            android:textColor="#8E8E93"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="-10dp"
            android:layout_marginBottom="10dp" />

        <!-- EVM Wallet Button -->
        <Button
            android:id="@+id/tvmWallet"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="ETH WALLET"
            android:layout_marginBottom="16dp"
            android:outlineAmbientShadowColor="#6fdfb4"
            android:outlineSpotShadowColor="#6fdfb4"
            android:elevation="20dp"
            style="@style/Aw.Component.Button.Primary" />

        <!-- TVM Wallet Button -->
        <Button
            android:id="@+id/evmWallet"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="TON WALLET"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            android:elevation="20dp"
            style="@style/Aw.Component.Button.Primary" />
    </LinearLayout>

</RelativeLayout>
